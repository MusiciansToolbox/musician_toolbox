
<div id="userForm">


<%= form_for @user, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Name", 'data-parsley-required' => 'true' %>
  </div>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email", 'data-parsley-type' => 'email', 'data-parsley-type-message' => "Something doesn't look right with that email address.", 'data-parsley-trigger' => 'blur', 'data-parsley-required' => 'true' %>
  </div>
  <div class="field">
    <%= f.text_field :zipcode, placeholder: "Zipcode", 'data-parsley-type' => 'number', 'data-parsley-minlength' => '5', 'data-parsley-maxlength' => '5', 'data-parsley-minlength-message' =>'Zip code should be 5 digits.', 'data-parsley-type-message' => 'Zip code should only be numbers.', 'data-parsley-trigger' => 'blur', 'data-parsley-required' => 'true' %>
  </div>


  <div class="field">
    <label>Profile Photo</label>
    <label>
      <% unless @user.profile_picture.blank? %>
        <%= f.file_field :profile_picture, id:"profilePicFileField"%>
        <%= image_tag @user.profile_picture.url, class:"profile-pic-account" %>
      <% else %>
        <%= f.file_field :profile_picture, id:"profilePicFileField"%>
        <%= image_tag "default_profile_pic.jpg", class:"profile-pic-account" %>
      <% end %>
    </label>
  </div>



  <div class="field">
    <%= f.text_field :facebook_url, placeholder: "Facebook URL", 'data-parsley-type' => 'url', autocomplete: "off" %>
  </div>

    <div class="field">
      <%= f.text_field :twitter_url, placeholder: "Twitter URL",  'data-parsley-type' => 'url', autocomplete: "off" %>
    </div>

  <div class="field">
    <label>Password</label>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", 'data-parsley-required' => 'true', 'data-parsley-required' => 'true' %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>



</div>


<!--don't move this or parsley breaks-->
<!--fun, right?-->
<script type="text/javascript">
  $('#userForm form').parsley();
</script>
