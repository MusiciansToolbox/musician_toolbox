
  <div class="content-wrapper">
      <h2>Log in</h2>

    <div id="loginForm">
          <%= form_tag("/sessions/create", method: "post") do |f| %>
          <div class="field">
            <%= email_field_tag :email, nil, {autofocus: true, autocomplete: "off", placeholder: "Email", 'data-parsley-type' => 'email', 'data-parsley-type-message' => "Something doesn't look right with that email address.", 'data-parsley-trigger' => 'blur'} %>
          </div>
          <div class="field">
            <%= password_field_tag :password, nil, {autocomplete: "off", placeholder: "Password"} %>
          </div>
          <div class="actions">
            <%= submit_tag "Submit" %>
          </div>
          <% end %>
    </div>

    <%= link_to "Create an Account", new_user_path, class: "link-to-create" %>

  </div>





  <!--don't move this or parsley breaks-->
  <!--fun, right?-->
  <script type="text/javascript">
    $('#loginForm form').parsley();
  </script>
