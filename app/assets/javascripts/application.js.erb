function dash(wait) {
  var wait = wait || 0;
  $('.dashboard.dashboard-wrapper').delay(wait).fadeOut(1500);
}

function head(wait) {
  var wait = wait || 0;
  $('header').delay(wait).slideUp(1500);
}

function prepareForSlideshow() {
